}
function handleDeleteRedacaoEixoLocal(eixoId) {
    if (redacoesState.redacoes.some(r => r.eixoId === eixoId)) {
        showRedacaoCustomAlert("Existem redações associadas a este eixo. Não pode ser excluído.", "Eixo em Uso"); return;
